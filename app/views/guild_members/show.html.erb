<% title "Point Adjustment History for #{@guild_member.name}"%>
<table>
<tr>
	<th>Reason</th>
	<th>Amount</th>
	<th>Date</th>
	<th>Rolls</th>
</tr>
<% @point_adjustments.each do |adj| %>
<tr>
	<td><%= adj.reason %></td>
	<td><%= points(adj) %></td>
	<td><%= adj.created_at %></td>
	<td><%= adj.comments%></td>
</tr>
<% end %>
</table>